@model Book

@{
    ViewBag.Title = "Details book";
}

<div class="bg-dark text-white pt-4 mt-5">
    <div class="row px-5">
        <div class="col-4 border-end border-white">
            <h4 class="text-center mb-5">Info</h4>
            <p><strong>Name: </strong>@Model.Name</p>
            <p><strong>Author: </strong>@Model.Author</p>
            <p><strong>Category: </strong>@Model.Category.Name</p>
            <p><strong>Date added: </strong>@Model.DateAdded</p>
            @if (!Model.Status)
            {
                <p><strong>Status: </strong><span class="status-color">Available</span></p>
            }
            else
            {
                <p><strong>Status: </strong><span class="text-error">Book is taken</span></p>
            }
            @if (Model.YearOfIssue != null)
            {
                <p><strong>Year of issue: </strong>@Model.YearOfIssue</p>
            }
            <div class="border-top border-white mt-1 mb-1">
                <p class="text-center mt-4"><a asp-action="Index" asp-controller="Book" class="btn btn-outline-light w-75">To main page</a></p>
                <p class="text-center mt-2"><a asp-action="Edit" asp-controller="Book" asp-route-bookId="@Model.Id" class="btn btn-outline-light w-75">Edit</a></p>
                <p class="text-center mt-2"><a asp-action="Delete" asp-controller="Book" asp-route-bookId="@Model.Id" class="btn btn-outline-danger w-75">Delete</a></p>
            </div>
        </div>
        <div class="col-8 text-center">
            <img src="@Model.Image" class="img-fluid img-border" alt="Book image">
        </div>
    </div>
    @if (Model.Description != null)
    {
        <div class="border-top border-white">
            <h4 class="text-center mt-2">Description</h4>
            <p class="ml-mr-2 mt-1">@Model.Description</p>
        </div>
    }
</div>